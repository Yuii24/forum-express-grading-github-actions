<div class="card my-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img class="img-responsive center-block" src="{{user.image}}"
        style="width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <p class="card-text">{{comment.length}} 篇已發表的評論</p>
        <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>
      </div>
    </div>
  </div>
</div>
<div>
  <div>
    <h3>已評論的餐廳</h3>
  </div>
  <div style="background: white; height: auto" class="d-flex flex-row bd-highlight mb-3 align-items-center flex-wrap">
    {{#each comment}}
    <a href="/restaurants/{{this.dataValues.restaurantId}}">
      <img src="{{this.dataValues.Restaurant.dataValues.image}}" class="img-thumbnail ms-1"
        style="max-width: 100px; max-height: 100px;" alt="{{this.dataValues.Restaurant.dataValues.name}}">
    </a>
    {{/each}}


